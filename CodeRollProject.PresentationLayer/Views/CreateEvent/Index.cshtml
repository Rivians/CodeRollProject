@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@* @model CodeRollProject.PresentationLayer.Models.UserEventVoteViewModel *@
@model CodeRollProject.EntityLayer.Concrete.Event
 
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<main>
    <div class="card-container card-containerCreate">
        <div class="card cardCreate">
            <div class="card-header">CREATE EVENT</div>
            <div class="card-form">
                <form asp-action="Index" asp-controller="CreateEvent" method="post" class="createForm">
                    <label @* for="eName" *@>Event Name</label>
                    <input asp-for="EventName" type="text" id="eName">
                    <span asp-validation-for="EventName"></span>
                    <br>
                    <label @* for="eDate" *@>Date</label>
                    <input asp-for="EventTime" type="datetime-local">
                    <span asp-validation-for="EventTime"></span>
                    <br>
                    <label @* for="ePlatform" *@>Platform</label>
                    <select asp-for="EventPlatform" id="ePlatform">
                        <option value="office">Office</option>
                        <option value="zoom">Zoom</option>
                        <option value="mcteams">Microsoft Teams</option>
                        <option value="skype">Skype</option>
                        <option value="other">Other</option>
                    </select>
                    <span asp-validation-for="EventPlatform"></span>
                    <br>
                    <label @* for="eDesc" *@>Description</label>
                    <textarea asp-for="EventDescription" id="eDesc" cols="35" rows="3"></textarea>
                    <span asp-validation-for="EventDescription"></span>
                    <div class="card-button buttonCreate">
                        <button type="submit" class="button1">Create</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>

