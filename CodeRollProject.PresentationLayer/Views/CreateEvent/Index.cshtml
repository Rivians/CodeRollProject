@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model CodeRollProject.EntityLayer.Concrete.Event
 
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<main>
    <div class="card-container card-containerCreate">
        <div class="card cardCreate">
            <div class="card-header">CREATE EVENT</div>
            <div class="card-form">
                <form asp-action="Index" asp-controller="CreateEvent" method="post" class="createForm">
                    <label>Event Name</label>
                    <input asp-for="EventName" type="text" id="eName">
                    <span asp-validation-for="EventName" style="color:red"></span>
                    <br>
                    <label>Date Option 1 :</label>
                     <input asp-for="EventTime1" type="datetime-local">
                      <span asp-validation-for="EventTime1" style="color:red"></span>
                     <br>
                    <label>Date Option 2 :</label>
                    <input asp-for="EventTime2" type="datetime-local">
                    <span asp-validation-for="EventTime2" style="color:red"></span>
                    <br>
                    <label>Date Option 3 :</label>
                    <input asp-for="EventTime3" type="datetime-local">
                    <span asp-validation-for="EventTime3" style="color:red"></span>
                    <br>
                    <label>Platform</label>
                    <select asp-for="EventPlatform" id="ePlatform">
                        <option value="office">Office</option>
                        <option value="zoom">Zoom</option>
                        <option value="mcteams">Microsoft Teams</option>
                        <option value="skype">Skype</option>
                        <option value="other">Other</option>
                    </select>
                    <span asp-validation-for="EventPlatform" style="color:red"></span>
                    <br>
                    <label>Description</label>
                    <textarea asp-for="EventDescription" id="eDesc" cols="35" rows="3"></textarea>
                    <span asp-validation-for="EventDescription" style="color:red"></span>
                    <div class="card-button buttonCreate">
                        <button type="submit" class="button1">Create Event</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>

