@model CodeRollProject.EntityLayer.Concrete.User
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Code & Roll</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <main>
        <div class="registerContainer">
            <form asp-action="Index" asp-controller="Register" method="post">
                <div class="isim">
                    <label for="fname">Name</label>
                    <br>
                    <input type="text" asp-for="Name" id="fname" placeholder="Your name..">
                    <span asp-validation-for="Name" style="color:red"></span>

                </div>
                <div class="mail">
                    <label for="email">E-Mail</label>
                    <br>
                    <input type="email"asp-for="Email" id="email"  placeholder="Your E-Mail..">
                    <span asp-validation-for="Email" style="color:red"></span>

                </div>

                <div class="sifre">
                    <label for="pword">Password</label>
                    <br>
                    <input type="password" asp-for="Password" id="pword" placeholder="Your password..">
                    <span asp-validation-for="Password" style="color:red"></span>

                </div>

                <div class="sifre">
                    <label for="pword">Confirm Password</label>
                    <br>
                    <input type="password" asp-for="ConfirmPassword" id="pword" placeholder="Your password..">
                    <span asp-validation-for="ConfirmPassword" style="color:red"></span>
                </div>
                <BR></BR>
                <button>Register</button>
            </form>
        </div>


    </main>
</body>
</html>