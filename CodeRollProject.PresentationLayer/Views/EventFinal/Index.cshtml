@model EventVoteViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<main>
    <div class="card-container">
        <div class="card">
            <div class="card-header">Choose Time</div>
            <div class="card-buttonS">
                <form asp-action="Index" asp-controller="EventFinal" method="post" id="my-form">
                    <lable>Name : </lable>
                    <input type="text" asp-for="participantName" />
                    <br />

                    @* @if (Model.voteOptionn != null && Model.voteOptionn.Count > 0) *@
                    @if (Model.eventt.EventTime1 != null)
                    {
                        <input type="checkbox" name="SelectedOption" value="@Model.eventt.EventTime1.ToString()" />
                        <span>@Model.eventt.EventTime1</span>
                        <br />
                    }

                    
                    @* @if (Model.voteOptionn != null && Model.voteOptionn.Count > 0) *@
                    @if (Model.eventt.EventTime2 != null)
                    {
                        <input type="checkbox" name="SelectedOption" value="@Model.eventt.EventTime2.ToString()" />
                        <span>@Model.eventt.EventTime2</span>
                        <br />
                    }
                    

                    @* @if (Model.voteOptionn != null && Model.voteOptionn.Count > 0) *@
                    @if (Model.eventt.EventTime3 != null)
                    {
                        <input type="checkbox" name="SelectedOption" value="@Model.eventt.EventTime3.ToString()" />
                        <span>@Model.eventt.EventTime3</span>
                        <br />
                    }
                    <button type="submit">Submit</button>
                </form>
            </div>
        </div>
        <div class="card">
            <div class="card-writing">
                <p>EVENT DETAILS</p>
            </div>
            <div class="card-list">
                <ul class="list">
                    <li class="listItem"><i class="fa-solid fa-address-card"></i>Event Name : @Model.eventt.EventName </li>
                    <li class="listItem"><i class="fa-solid fa-location-dot"></i>Event Platform : @Model.eventt.EventPlatform </li>
                    <li class="listItem" style="height:120px"><i class="fa-solid fa-square-plus"></i>Event Description : @Model.eventt.EventDescription </li>
                </ul>
            </div>
        </div>
        <br />
        <div class="card">
            <div class="card-list">
                <ul class="list">
                    <li class="listItem"><i class="fa-solid fa-address-card"></i>Participants</li>
                    <br />
                    @if (Model.eventt.Votes != null)
                    {
                        @foreach (var item in Model.eventt.Votes)
                        {
                            <span>İsim : @item.ParticipantName </span>
                            <br />
                            <br />
                        }
                    }
                </ul>
            </div>
        </div>
    </div>
</main>